{% extends 'AppBundle::base_layout.html.twig' %}

{% block content %}
    <h1>Comment</h1>

    <dl>
        <dt>Id</dt>
        <dd>{{ comment.id }}</dd>
        <dt>Title</dt>
        <dd>{{ comment.title }}</dd>
        <dt>Content</dt>
        <dd>{{ comment.content }}</dd>
        <dt>Updated At</dt>
        <dd>{% if comment.updatedAt %}{{ comment.updatedAt|date('Y-m-d H:i:s') }}{% endif %}</dd>
        <dt>Created At</dt>
        <dd>{% if comment.createdAt %}{{ comment.createdAt|date('Y-m-d H:i:s') }}{% endif %}</dd>
        <dt>Author</dt>
        <dd>{{ comment.author }}</dd>
    </dl>

    <dl>
        <ul>
            <li>
                <a href="{{ path('comment_index') }}">Back to the list</a>
            </li>
            <li>
                <a href="{{ path('comment_edit', { 'id': comment.id }) }}">Edit</a>
            </li>
            <li>
                {{ form_start(delete_form) }}
                {{ form_widget(delete_form) }}
                {{ form_end(delete_form) }}
            </li>
        </ul>
    </dl>
{% endblock %}
